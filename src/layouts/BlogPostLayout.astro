---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Rishi Nitin Agrawal's website" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <main class="wrapper">
    <form method="POST" action="https://gcera9txsa.execute-api.us-east-2.amazonaws.com/sendFeedbackAPI">
      <textarea name="message" required placeholder="Leave me anonymous feedback!"></textarea>
      <button type="submit">Send</button>
    </form>
      <article>
        <h1><a href="/" title="Rishi Nitin Agrawal">Rishi Agrawal</a></h1>
        <slot />
      </article>
    </main>
  </body>
</html>
